<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Register"
        android:textColor="#22215B"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome, good to see you here."
        android:textColor="#7B7f9E"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginLeft="30dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:letterSpacing="0.1"
        android:textColor="#7B7f9E"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_input_bg"
        android:padding="10dp"
        android:textSize="15dp"
        android:hint="Name"
        android:fontFamily="@font/gilroy_light"
        android:textColorHint="#DDAAAAAA"
        android:textColor="#6D81EB"
        android:textCursorDrawable="@null"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT"
        android:letterSpacing="0.1"
        android:textColor="#7B7f9E"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:id="@+id/register_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="phone"
        android:importantForAutofill="no"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_input_bg"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="#6D81EB"
        android:hint="Phone"
        android:fontFamily="@font/gilroy_light"
        android:textColorHint="#DDAAAAAA"
        android:textCursorDrawable="@null"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:letterSpacing="0.1"
        android:textColor="#7B7f9E"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_input_bg"
        android:padding="10dp"
        android:textSize="15dp"
        android:hint="Email"
        android:fontFamily="@font/gilroy_light"
        android:textColorHint="#DDAAAAAA"
        android:textColor="#6D81EB"
        android:textCursorDrawable="@null"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:letterSpacing="0.1"
        android:textColor="#7B7f9E"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#22215B"
        android:hint="Minimum of 8 characters"
        android:textColorHint="#DDAAAAAA"
        >

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_input_bg"
            android:padding="10dp"
            android:fontFamily="@font/gilroy_light"
            android:textSize="15dp"
            android:textColor="#6D81EB"
            android:textCursorDrawable="@null"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRM PASSWORD"
        android:letterSpacing="0.1"
        android:textColor="#7B7f9E"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#22215B"
        android:textColorHint="#DDAAAAAA"
        >

        <EditText
            android:id="@+id/register_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_input_bg"
            android:padding="10dp"
            android:fontFamily="@font/gilroy_light"
            android:textSize="15dp"
            android:textColor="#6D81EB"
            android:textCursorDrawable="@null"
            />
    </com.google.android.material.textfield.TextInputLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADDRESS"
        android:letterSpacing="0.1"
        android:textColor="#7B7f9E"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        />

    <EditText
        android:id="@+id/register_address"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textPostalAddress"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_input_bg"
        android:padding="10dp"
        android:textSize="15dp"
        android:textColor="#6D81EB"
        android:hint="Address"
        android:gravity="top"
        android:fontFamily="@font/gilroy_light"
        android:textColorHint="#DDAAAAAA"
        android:textCursorDrawable="@null"
        />

    <Button
        android:id="@+id/register_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#6D81EB"
        android:text="Register"
        android:textSize="16dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        />


</LinearLayout>